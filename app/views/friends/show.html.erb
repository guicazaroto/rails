  <p style="color: green"><%= notice %></p>

  <h1>
    <%= @friend.firstname %>
    <%= @friend.lastname %>
  </h1>
  <p>
    <b>Email:</b>
    <%= @friend.email %>
  </p>
  <p>
    <b>Phone:</b>
    <%= @friend.phone %>
  </p>
  <p>
    <b>Twitter:</b>
    <%= @friend.twitter %>
  </p>

  <div class="d-flex flex-row">
    <button class="btn btn-info">
      <%= link_to "Edit this friend", edit_friend_path(@friend), class: 'nav-link' %>
    </button>
    <button class="btn btn-warning mx-3">
      <%= link_to "Back to friends", friends_path, class: 'nav-link' %>
    </button>
    <%= button_to "Destroy this friend", @friend, method: :delete, class: 'btn btn-danger'  %>
  </div>
